<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_splash"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:src="@drawable/giant_phone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_splash_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:textSize="33dp"
        android:letterSpacing="0.15"
        android:fontFamily="@font/poppin_bold"
        android:textColor="@color/green_teal"
        app:layout_constraintBottom_toTopOf="@id/iv_splash"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_splash_antrian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Antrian Klinik Kecantikan"
        android:textSize="15dp"
        android:textColor="@color/med_grey"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toBottomOf="@+id/tv_splash_welcome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_splash_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021"
        android:textSize="20dp"
        android:textColor="@color/med_grey"
        android:fontFamily="@font/poppin_bold"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_splash"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>